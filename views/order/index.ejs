<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    <link rel="icon" type="image/png" href="/assets/i/favicon.png">
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<div class="am-container common-page order-page">

    <% if (flash.success != '') { %>
    <div class="am-alert am-alert-success">
        <p><%= flash.success %></p>
    </div>
    <% } %>
    
        <fieldset>

            <legend><a href="/order">发货订单列表</a></legend>
            
            <form role="form" action="/order" class="am-g">
                
                <div class="am-u-lg-2 am-u-sm-4">
                    <input type="text" name="search-order-name" class="am-form-field" placeholder="搜索订单名">
                </div>
                
                <div class="am-u-lg-2 am-u-sm-4">
                    <input type="text" name="search-customer-name" class="am-form-field" placeholder="搜索用户名">
                </div>
                
                <div class="am-u-lg-2 small-screen-hide">
                    <input type="text" name="search-address" class="am-form-field" placeholder="搜索地址">
                </div>
                
                <div class="am-u-lg-1 am-u-sm-4">
                    <button type="submit" class="am-btn am-btn-primary">搜索</button>
                </div>

                <div class="am-u-lg-2 am-u-end">
                    <label class="normal">未发货：<input type="checkbox" class="ckb-notshipped" name="notshipped" <%if(searchNotShipped){%>checked="checked"<%}%> /></label>
                </div>
            </form>

            <hr/>
            
            <table class="am-table">
                <thead>
                <tr>
                    <th width="20"></th>
                    <th class="t-c">订单名称</th>
                    <th class="t-c" width="150">收件人</th>
                    <th class="t-c" width="150">快递</th>
                    <th class="t-c small-screen-hide" width="60">链接</th>
                    <th class="t-c small-screen-hide" width="150">淘宝名</th>
                    <th class="t-c small-screen-hide">时间</th>
                    <th class="t-c small-screen-hide">选项</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i=0; i < order.length; i++) {%>
                <tr data-order-id="<%= order[i].get('orderId') %>" data-customer-id="<%= order[i].get('customerId') %>" <% if (order[i].get('shippingStatus') !== 'shipped' ) { %>class="off"<%}%>>
                    <td class="t-c">
                        <input order-id="<%= order[i].get('orderId') %>" class="ckb-shipped" type="checkbox" <% if (order[i].get('shippingStatus') === 'shipped' ) { %>checked="checked"<%}%>/>
                    </td>
                <td>
                    <%for(var j=0; j<order[i].get('name').length;j++) {%>
                    <div class="order-split">
                        <span class="image loading-elem on" data-id="<% if(/\{id\:\d+\}/.test(order[i].get('name')[j])){%><%= order[i].get('name')[j].replace(/([^\{]+\{id\:)(\d+)(\})/,'$2') %><%}%>"></span>
                        <a href="/order/edit/<%= order[i].get('orderId') %><%if(searchNotShipped){ %>?search-notshipped=on<%}%>" <% if(/\{id\:\d+\}/.test(order[i].get('name')[j])){%>title="productId:<%= order[i].get('name')[j].replace(/([^\{]+\{id\:)(\d+)(\})/,'$2') %>"<%}%>>
                            <% if(order[i].get('isGift')[j]){%>(赠)<%}%>
                            <%= order[i].get('shippingCount')[j] %>*<%= order[i].get('name')[j].replace(/\{id\:\d+\}/,'') %>
                        </a>
                        <% if(/\{id\:\d+\}/.test(order[i].get('name')[j])) {%>
                        <a class="set-stock" product-id="<%= order[i].get('name')[j].replace(/([^\{]+\{id\:)(\d+)(\})/,'$2') %>" title="设置库存" href="javascript:;"><i class="am-icon am-icon-inbox"></i></a>
                        <a class="update-stock" order-id="<%= order[i].get('orderId') %>" product-id="<%= order[i].get('name')[j].replace(/([^\{]+\{id\:)(\d+)(\})/,'$2') %>" title="是否已设置库存" href="javascript:;"><i class="am-icon am-icon-check-circle <%if(order[i].get('isShipping')[j]){%>on<%}else{%>off<%}%>"></i></a>
                        <%}%>
                    </div>
                    <%}%>
                </td>
                    <td class="t-c">
                        <a class="customer-name" title="<%= order[i].get('shippingAddress') %>" href="/customer/edit/<%= order[i].get('customerId') %>"><%= order[i].get('customerName') %><% if(order[i].get('client')){%>(代:<%= order[i].get('client') %>)<%}%></a>
                        <span class="split"></span>
                        <a href="javascript:;" title="复制姓名" class="clipboard-customer-name" data-clipboard-text="<% if(order[i].get('client')){%><%=order[i].get('client')%><%}else{%><%=order[i].get('customerName')%><%}%>"><i class="am-icon am-icon-copy"></i></a>
                        <a href="javascript:;" title="复制地址" class="clipboard-customer-address" data-clipboard-text="<% if(order[i].get('clientAddress')){%><%=order[i].get('clientAddress')%><%}else{%><%=order[i].get('shippingAddress')%><%}%>"><i class="am-icon am-icon-copy"></i></a>
                    </td>
                    <td class="t-c">
                        
                        <% var shippingCompany = ''; var express = '';
                        if(order[i].get('shippingCompany') == 'tiantian') {
                            shippingCompany = '天天';
                            express = 'TTKDEX';
                        } else if (order[i].get('shippingCompany') == 'shunfeng') {
                            shippingCompany = '顺丰';
                            express = 'SFEXPRESS';
                        } else if (order[i].get('shippingCompany') == 'kuaijie') {
                            shippingCompany = '快捷';
                            express = 'FASTEXPRESS';
                        } else if (order[i].get('shippingCompany') == 'other') {
                            shippingCompany = '其他';
                        }
                        %>
                        
                        <% if(order[i].get('trackingNumber')){ %> 
                        <a class="track-order" data-track="<%=order[i].get('trackingNumber')%>" href="<%if(express) { %>//51wish.cn/order/express/query/<%=order[i].get('trackingNumber')%>/<%=express%><%}%>" target="_blank"><%= shippingCompany %></a>
                        <%} else {%>
                        <a target="_blank" class="action-shipping-company am-btn am-btn-link disabled" data-order-id="<%= order[i].get('orderId') %>"><%=shippingCompany%></a>
                        <%}%>
                        
                        <span class="split"></span>
                        <a href="javascript:;" title="复制单号" class="clipboard-tracking-number" data-clipboard-text="<%=order[i].get('trackingNumber')%>"><i class="am-icon am-icon-copy"></i></a>
                        
                    </td>
                
                    <td class="t-c small-screen-hide">
                        <%if (order[i].get('shopOrderLink')) { %>
                            <% var shopLinks = order[i].get('shopOrderLink').split('\n'); %>
                            <% for(var j=0;j<shopLinks.length;j++) {%>
                                <a target="_blank" href="<%=shopLinks[j]%>"><i class="am-icon-external-link"></i></a>
                            <%}%>
                        <%}else {%>-<%}%>
                    </td>
                    
                    <td class="t-c small-screen-hide"> <span class="taobao-name loading-elem on"></span> </td>
                    
                    <td class="t-c small-screen-hide"><%=(order[i].get('shippingDate').getMonth()+1)%>/<%=order[i].get('shippingDate').getDate()%></td>
                    <td class="t-c small-screen-hide">
                        
                        <div class="am-dropdown" data-am-dropdown>
                            <button class="am-btn am-btn-primary am-dropdown-toggle" data-am-dropdown-toggle>选项 <span class="am-icon-caret-down"></span></button>
                            <ul class="am-dropdown-content">
                                <li><a href="/order/add?name=<%= encodeURIComponent(order[i].get('name')[0]) %>&tracking-number=<%= order[i].get('trackingNumber')%>">复制</a></li>
                                <li><a href="/order/remove/<%= order[i].get('orderId') %>" class="remove-order">删除</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
            
            <ul class="am-pagination">
                <% if (orderPager.prev) { %> <li>
                    <a href="/order?page=<%= orderPager.prev %><% if(searchOrderName) {%>&search-order-name=<%=searchOrderName%> <%}%><% if(searchCustomerName) {%>&search-customer-name=<%=searchCustomerName%> <%}%><% if(searchAddress) {%>&search-address=<%=searchAddress%> <%}%><% if(searchNotShipped) {%>&search-notshipped=<%=searchNotShipped%><%}%>">上一页</a></li> <% } %>
                <% if (orderPager.next) { %> <li>
                    <a href="/order?page=<%= orderPager.next %><% if(searchOrderName) {%>&search-order-name=<%=searchOrderName%> <%}%><% if(searchCustomerName) {%>&search-customer-name=<%=searchCustomerName%> <%}%><% if(searchAddress) {%>&search-address=<%=searchAddress%> <%}%><% if(searchNotShipped) {%>&search-notshipped=<%=searchNotShipped%><%}%>">下一页</a></li> <% } %>
                <li class="count">第<%=orderPager.page%>页 共<%= orderCount %>条</li>
            </ul>
            
            <hr/>

            <div class="am-form-group">
                <a href="/order/add<% if(searchNotShipped){%>?search-notshipped=on<%}%>" class="am-btn am-btn-primary" role="button">添加新订单</a>
            </div>

        </fieldset>


</div>


<!-- modal 删除order -->
<div class="am-modal am-modal-confirm" tabindex="-1" id="confirm-remove-order">
    <div class="am-modal-dialog">
        <div class="am-modal-bd">
            确定要删除这条记录吗？
        </div>
        <div class="am-modal-footer">
            <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            <span class="am-modal-btn" data-am-modal-cancel>取消</span>
        </div>
    </div>
</div>


<!-- modal 库存 -->
<div class="am-modal am-modal-prompt" tabindex="-1" id="modal-set-stock">
    <div class="am-modal-dialog">
        <div class="am-modal-hd"><a href="javascript:;" class="am-close am-close-spin" data-am-modal-close="">×</a></div>
        <div class="am-modal-bd">

            <div class="am-form">

                <label>库存:</label>
                <div class="am-form-inline">
                    <div class="am-form-group">
                        <select name="stock" stock>
                            <% for(var i=0;i<100;i++) { %>
                            <option value="<%=i%>"><%=i%></option>
                            <% }%>
                        </select>
                    </div>
                    <div class="am-form-group">
                        <span><button disabled="disabled" type="button" class="am-btn am-btn-default stock-plus">+1库存</button></span>
                        <span><button disabled="disabled" type="button" class="am-btn am-btn-default stock-minus">-1库存</button></span>
                    </div>
                </div>

                <label>总销量:</label>
                <div class="am-form-inline">
                    <div class="am-form-group">
                        <input type="text" name="sales" readonly="readonly" value="">
                    </div>
                </div>

                <div>
                    <button type="button" class="am-btn am-btn-primary stock-save">保存</button>
                    <button type="button" class="am-btn am-btn-primary stock-reset">重置</button>
                </div>
            </div>
            
        </div>
    </div>
</div>


<!-- modal 快递单号查询 -->
<div class="am-modal am-modal-no-btn" tabindex="-1" id="modal-track-order">
    <div class="am-modal-dialog">
        <div class="am-modal-hd">快递单号查询
            <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
        </div>
        <div class="am-modal-bd">
            asdfsf
        </div>
    </div>
</div>


<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
    
    $(function() {
        var order = require('order');
        order.indexFun();
    });
    
    
</script>
</body>
</html>