<!DOCTYPE html>
<html>
<head>
    <% include ../partials/meta %>
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>

<div class="am-cf admin-main">

    <!-- sidebar start -->
    <% include ../partials/sidebar %>
    <!-- sidebar end -->

    <!-- content start -->
    <div class="admin-content admin-product-method-page">

        <div class="am-cf am-padding">
            <div class="am-fl am-cf"><strong><a href="/admin/product-method">产品类型编辑</a></strong> / <a href="/admin/product-method/edit/<%= productMethod.get('productMethodId') %>">编辑产品类型</a></div>
        </div>

        <div class="am-g">
            <div class="am-u-sm-12">

                <form id="form-add-product" class="am-form" action="/admin/product-method/edit/<%= productMethod.get('productMethodId') %>" method="post">

                    <!-- name start -->
                    <div class="am-form-group">
                        <label for="name">产品类型名称<i>*</i>:</label>
                        <input id="name" required name="name" type="text" value="<%= productMethod.get('name') %>" placeholder="输入产品类型名称[必填]" />
                    </div>
                    <!-- name end -->

                    <!-- label start -->
                    <div class="am-form-group">
                        <label for="label">产品类型标签(英文)<i>*</i>:</label>
                        <input id="label" required name="label" type="text" value="<%= productMethod.get('label') %>" placeholder="输入产品类型标签[必填]" />
                    </div>
                    <!-- label end -->

                    <hr/>

                    <div class="am-form-group">
                        <button id="submit" type="submit" class="am-btn am-btn-primary">保存</button>
                        <button type="button" class="am-btn am-btn-primary" onclick="history.back(-1);">返回</button>
                    </div>

                </form>

            </div>
        </div>

    </div>
    <!-- content end -->

</div>

<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
    $(function () {
        productMethod = require('product-method');
        productMethod.editFun();
    });
</script>
</body>
</html>