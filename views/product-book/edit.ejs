<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    <title><%= title %></title>
    <% include ../partials/css %>
</head>
<body>

<% include ../partials/header %>


<div class="am-container common-page">

    <form id="form-edit-product-book" class="am-form" action="/product-book/edit" method="post">

        <input type="hidden" name="product-book-id" value="<%= productBookId %>"/>
        
        <fieldset>

            <legend>编辑新预定记录信息</legend>

            <input type="hidden" id="customer-id" name="customer-id" value="<%= productBook.get('customerId') %>">

            <!-- product-book customer name start -->
            <div class="am-form-group typeahead-content">
                <label>客户姓名(自动填充)：<i>*</i> </label>
                <input id="customer-name" required name="customer-name" type="text" placeholder="输入客户名" value="<%= productBook.get('customerName') %>" />
            </div>
            <!-- product-book customer name end -->

            <hr>
            
            <!-- product-book title start -->
            <div id="content-name" class="am-form-group">
                <label>标题：<i>*</i> </label>
                <input id="title" required name="title" type="text" value="<%= productBook.get('title') %>" placeholder="输入标题" />
            </div>
            <!-- product-book title end -->

            <hr/>

            <!-- comment start -->
            <div id="content-comment" class="am-form-group">
                <label>预定内容说明：</label>
                <textarea name="comment" id="comment" placeholder="输入预定内容说明" rows="5"><%= productBook.get('comment') %></textarea>
            </div>
            <!-- comment end -->

            <hr/>

            <!-- status start -->
            <div id="content-is-complete" class="am-form-group">
                <label>是否完结：</label>
                <div><label><input id="is-complete" name="is-complete" type="checkbox" <% if(productBook.get('isComplete')) { %>checked="checked"<% } %> > 已完成</label></div>
            </div>
            <!-- status end -->

            <hr/>

            <div class="am-form-group">
                <button type="submit" class="am-btn am-btn-primary">保存</button>
                <button type="button" class="am-btn am-btn-primary" onclick="history.back(-1);">返回</button>
            </div>

        </fieldset>

    </form>


</div>


<% include ../partials/footer %>
<% include ../partials/js %>

<script type="text/javascript">
    $(function() {
        var productBook = require('product-book');
        productBook.editFun();
    });
</script>
</body>
</html>